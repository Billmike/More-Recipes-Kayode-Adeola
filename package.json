{
  "name": "more-recipes",
  "version": "1.0.0",
  "description": "A recipe sharing web application",
  "main": "app.js",
  "scripts": {
    "migrate": "sequelize db:migrate",
    "unmigrate": "sequelize db:migrate:undo:all",
    "start:dev": "nodemon --watch server --exec babel-node ./bin/www",
    "heroku-postbuild": "npm run migrate",
    "start": "babel-node ./bin/www",
    "test": "SET NODE_ENV=test&& mocha --timeout 10000 --compilers js:babel-core/register server/test",
    "tests": "cross-env NODE_ENV=test nyc _mocha --report lcovonly --reporter spec --timeout 10000 server/test && cat ./coverage/lcov.info | coveralls",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "react": "cd client && npm start",
    "react:build": "cd client && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/monsieurkayode/More-Recipes.git"
  },
  "keywords": [
    "Javascript",
    "Node",
    "Express",
    "React"
  ],
  "nyc": {
    "require": [
      "babel-register"
    ],
    "exclude": [
      "server/test/"
    ],
    "reporter": [
      "lcov",
      "text",
      "html"
    ],
    "sourceMap": false,
    "instrument": true
  },
  "author": "Kayode Adeola",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/monsieurkayode/More-Recipes/issues"
  },
  "homepage": "https://github.com/monsieurkayode/More-Recipes#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "coveralls": "^2.13.1",
    "cross-env": "^5.0.5",
    "eslint": "^4.5.0",
    "eslint-config": "^0.3.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.3.0",
    "nyc": "^11.1.0"
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "bcrypt": "^1.0.2",
    "body-parser": "^1.17.2",
    "chai": "^4.1.1",
    "concurrently": "^3.5.0",
    "cors": "^2.8.4",
    "dotenv": "^4.0.0",
    "express": "^4.15.4",
    "jimp": "^0.2.28",
    "jsonwebtoken": "^7.4.3",
    "lodash": "^4.17.4",
    "mocha": "^3.5.0",
    "morgan": "^1.8.2",
    "multer": "^1.3.0",
    "nodemailer": "^4.1.0",
    "nodemon": "^1.11.0",
    "pg": "^6.4.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "^3.30.4",
    "sequelize-cli": "^2.8.0",
    "supertest": "^3.0.0",
    "swagger-ui-express": "^2.0.7",
    "uuid": "^3.1.0"
  }
}
